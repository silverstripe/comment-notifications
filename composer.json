{
    "name": "silverstripe/comment-notifications",
    "description": "Provides email notifications for visitor comments",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Damian Mooyman",
            "email": "damian@silverstripe.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "silverstripe/comments": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\CommentNotifications\\": "src/",
            "SilverStripe\\CommentNotifications\\Tests\\": "tests/"
        }
